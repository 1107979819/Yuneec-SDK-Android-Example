<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        >
        <com.yuneec.example.view.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Latitude in Deg"
            style="@style/text_dark"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/latitude_deg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/text_dark"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.yuneec.example.view.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Longitude in Deg"
            android:layout_weight="1"
            style="@style/text_dark" />
        <EditText
            android:id="@+id/longitude_deg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/text_dark"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.yuneec.example.view.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Altitude"
            android:layout_weight="1"
            style="@style/text_dark" />
        <EditText
            android:id="@+id/altitude_m"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/text_dark"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.yuneec.example.view.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Speed "
            android:layout_weight="1"
            style="@style/text_dark"/>
        <EditText
            android:id="@+id/speed_m_s"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/text_dark"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.yuneec.example.view.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Camera Pitch in Deg"
            android:layout_weight="1"
            style="@style/text_dark"/>

        <EditText
            android:id="@+id/pitch_deg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/text_dark"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.yuneec.example.view.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Yaw in Deg"
            android:layout_weight="1"
            style="@style/text_dark"/>

        <EditText
            android:id="@+id/yaw_deg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/text_dark"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.yuneec.example.view.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Camera Action"
            android:layout_weight="1"
            style="@style/text_dark"/>

        <Spinner
            android:id="@+id/camera_action_spinner"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            style="@style/text_dark"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="22dp"
        >
        <Button
            android:id="@+id/mission_send_button"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="Send"
            style="@style/button"
            android:layout_weight="1"
            android:visibility="gone"
            />

        <ImageButton
            android:id="@+id/mission_start_button"
            style="@style/buttonIcon_image"
            android:background="@android:color/transparent"
            android:src="@drawable/play1"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/mission_pause_button"
            style="@style/buttonIcon_image"
            android:background="@android:color/transparent"
            android:src="@drawable/pause"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/addpoint"
            style="@style/buttonIcon_image"
            android:background="@android:color/transparent"
            android:src="@drawable/plus"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>