<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.yuneec.example.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin"
                style="@style/text_dark"
                android:text="@string/white_balance_mode" />

            <com.yuneec.example.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin"
                style="@style/text_dark"
                android:text="@string/color_mode" />

            <com.yuneec.example.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin"
                style="@style/text_dark"
                android:text="@string/exposure_mode" />

            <com.yuneec.example.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin"
                android:text="@string/iso_value"
                style="@style/text_dark"
                android:visibility="gone" />

            <com.yuneec.example.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin"
                android:text="@string/shutter_speed"
                style="@style/text_dark"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/wb_dropdown"
                android:layout_width="wrap_content"
                android:layout_height="52dp"></Spinner>

            <Spinner
                android:id="@+id/color_mode_dropdown"
                android:layout_width="wrap_content"
                android:layout_height="52dp"></Spinner>

            <Spinner
                android:id="@+id/exposure_mode_dropdown"
                android:layout_width="wrap_content"
                android:layout_height="52dp"></Spinner>

            <Spinner
                android:id="@+id/iso_dropdown"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:visibility="gone"></Spinner>

            <Spinner
                android:id="@+id/shutter_speed_dropdown"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:visibility="gone"></Spinner>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <Button
            android:id="@+id/ok"
            style="@style/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/apply"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/cancel"
            style="@style/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_weight="1"/>

    </LinearLayout>


</LinearLayout>

